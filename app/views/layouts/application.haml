!!! 5
%html{:lang => 'en'}
  %head
    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    %meta{content: 'text/html; charset=utf-8', 'http-equiv' => 'Content-Type'}
    %meta{name: :viewport, content: 'width=device-width,initial-scale=1'}
    %link{href: 'http://fonts.googleapis.com/css?family=Varela', rel: :stylesheet}
    =stylesheet_link_tag 'bootstrap', 'application'

  %body
    %nav.navbar.navbar-fixed-top
      .navbar-inner
        .container
          .navbar-left
            =link_to 'Automatica', url(:home, :index), class: 'navbar-brand'
          -if signed_in?
            .navbar-collapse.collapse.navbar-right
              %ul.nav.navbar-nav
                %li=link_to 'account', url(:account, :show)
                %li=link_to 'trips', url(:trips, :index)
                %li=link_to 'logout', url(:account, :logout)
            
    .container.main
      .main-wrapper
        .container=yield
        .main-wrapper-push

    %footer
      .footer-wrapper.container
        %p.pull-left
        %ul.pull-right.footer-links
    =javascript_include_tag 'jquery-1.9.0.min', 'jquery-ujs', 'bootstrap.min'
